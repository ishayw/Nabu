# Configuration for Meeting Summarizer

## General Settings
APP_HOST=127.0.0.1
APP_PORT=8000
APP_ENV=development

## Directories
RECORDINGS_DIR=recordings
DB_PATH=meetings.db

## Recording Parameters
# Enable automatic meeting detection (voice activity based recording)
# WARNING: Auto-detection is experimental and currently unreliable - recommended to keep disabled
AUTO_DETECTION=false
VAD_THRESHOLD=0.03
SILENCE_DURATION=10
MIN_RECORDING_DURATION=3

## LLM Settings
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-flash-latest
LLM_TIMEOUT=600
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

## File Upload Settings
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=.wav,.m4a,.mp3,.flac,.ogg

## CORS Settings
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

## Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
